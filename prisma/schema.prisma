generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workspaces  WorkspaceUser[]
  projects    Project[]
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       WorkspaceUser[]
  projects    Project[]
}

model WorkspaceUser {
  id          String   @id @default(cuid())
  role        String   @default("member") // owner, admin, member
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  workspaceId String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  @@unique([userId, workspaceId])
}

model Project {
  id              String   @id @default(cuid())
  name            String
  description     String?
  status          String   @default("draft")
  activeVersionId String?  // Reference to the currently active module version
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
  workspaceId     String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace       Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  estimates       Estimate[]
  files           ProjectFile[]
  analysis        ProjectAnalysis?
  moduleVersions  ModuleVersion[]
  activeVersion   ModuleVersion? @relation("ActiveVersion", fields: [activeVersionId], references: [id])
}

model ModuleVersion {
  id                    String   @id @default(cuid())
  version               Int      // Auto-incrementing version number
  name                  String?  // Optional name for the version (e.g., "Initial Draft", "Revised")
  modulesData           Json     // The actual modules JSON data
  baseEstimationHours   Int?     // Base estimation in hours from OpenAI
  baseTShirtSize        String?  // Base T-shirt size from OpenAI
  optimisticLevel       String?  // "optimistic", "realistic", "pessimistic"
  adjustedEstimationHours Int?   // Adjusted estimation based on optimistic level
  adjustedTShirtSize    String?  // Adjusted T-shirt size
  totalEstimatedSprints Decimal? // Calculated sprints based on team velocity
  teamVelocity          Int?     // Team velocity (hours per sprint)
  createdAt             DateTime @default(now())
  projectId             String
  project               Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  activeProjects        Project[] @relation("ActiveVersion")
  
  @@unique([projectId, version])
}

model Estimate {
  id        String   @id @default(cuid())
  title     String
  amount    Decimal
  currency  String   @default("USD")
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectFile {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  fileSize    Int
  mimeType    String
  filePath    String   // blob storage URL or local storage path
  openaiFileId String? // OpenAI file ID for RAG
  uploadedAt  DateTime @default(now())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProjectAnalysis {
  id                    String   @id @default(cuid())
  functionalCoverage    Int      // percentage 0-100
  businessCoverage      Int
  userExperienceCoverage Int
  scopeCoverage         Int
  overallClarity        Int
  missingItems          Json     // array of missing requirement items
  projectSummary        String?  // AI-generated project summary
  analyzedAt            DateTime @default(now())
  projectId             String   @unique
  project               Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
